<style>
/* Estilo met치lico personalizado para MayGit - Totalmente Responsive */

.page-content.home {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 25%, #1a1a1a 50%, #2d2d2d 75%, #1a1a1a 100%);
    background-size: 40px 40px;
    animation: metalTexture 20s linear infinite;
    min-height: 100vh;
    position: relative;
    padding: 0;
    margin: 0;
}

.page-content.home::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
        rgba(255,255,255,0.1) 0%, 
        rgba(0,0,0,0.3) 25%, 
        rgba(255,255,255,0.05) 50%, 
        rgba(0,0,0,0.3) 75%, 
        rgba(255,255,255,0.1) 100%);
    pointer-events: none;
}

@keyframes metalTexture {
    0% { background-position: 0 0; }
    100% { background-position: 40px 40px; }
}

/* Logo con efecto met치lico */
.logo {
    filter: drop-shadow(0 0 20px rgba(255,255,255,0.3)) 
            drop-shadow(0 5px 15px rgba(0,0,0,0.5));
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, 
        rgba(255,255,255,0.2), 
        rgba(128,128,128,0.1), 
        rgba(0,0,0,0.3));
    padding: 20px;
    transition: all 0.3s ease;
    max-width: 100%;
    height: auto;
}

.logo:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 0 30px rgba(255,255,255,0.5)) 
            drop-shadow(0 8px 25px rgba(0,0,0,0.7));
}

/* T칤tulos con efecto met치lico */
.hero h1, .hero h2 {
    background: linear-gradient(45deg, 
        #ffffff 0%, 
        #c0c0c0 25%, 
        #ffffff 50%, 
        #a0a0a0 75%, 
        #ffffff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    font-weight: 700;
    letter-spacing: 1px;
    text-align: center;
}

.hero h1 {
    font-size: clamp(2rem, 5vw, 3.5rem) !important;
    margin: 20px 0 !important;
}

.hero h2 {
    font-size: clamp(1.2rem, 3vw, 1.8rem) !important;
    margin: 15px 0 !important;
}

/* Headers de secciones */
.ui.icon.header {
    background: linear-gradient(135deg, 
        #f8f8f8 0%, 
        #e0e0e0 25%, 
        #f8f8f8 50%, 
        #d0d0d0 75%, 
        #f8f8f8 100%) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3) !important;
    font-weight: 600 !important;
    position: relative;
    font-size: clamp(1.3rem, 2.5vw, 1.8rem) !important;
}

/* Contenedores con efecto met치lico */
.ui.grid > .column {
    background: linear-gradient(145deg, 
        rgba(255,255,255,0.1) 0%, 
        rgba(200,200,200,0.05) 50%, 
        rgba(0,0,0,0.1) 100%);
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 15px;
    padding: clamp(15px, 4vw, 30px) !important;
    margin: clamp(5px, 2vw, 15px);
    backdrop-filter: blur(10px);
    box-shadow: 
        inset 0 1px 0 rgba(255,255,255,0.2),
        inset 0 -1px 0 rgba(0,0,0,0.2),
        0 10px 30px rgba(0,0,0,0.3),
        0 0 0 1px rgba(255,255,255,0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    width: 100%;
    box-sizing: border-box;
}

.ui.grid > .column::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255,255,255,0.1), 
        transparent);
    transition: left 0.5s ease;
}

.ui.grid > .column:hover::before {
    left: 100%;
}

.ui.grid > .column:hover {
    transform: translateY(-2px);
    box-shadow: 
        inset 0 1px 0 rgba(255,255,255,0.3),
        inset 0 -1px 0 rgba(0,0,0,0.3),
        0 15px 35px rgba(0,0,0,0.4),
        0 0 0 1px rgba(255,255,255,0.2);
}

/* P치rrafos con mejor contraste */
p.large {
    color: #e8e8e8 !important;
    font-size: clamp(1rem, 2.5vw, 1.2rem) !important;
    line-height: 1.6 !important;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    font-weight: 400 !important;
    text-align: center;
    margin: 0 auto;
    max-width: 90%;
}

/* Enlace de WhatsApp con estilo especial */
.whatsapp-link {
    display: inline-block;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    color: white !important;
    padding: 12px 25px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    box-shadow: 0 5px 15px rgba(37, 211, 102, 0.3);
    transition: all 0.3s ease;
    margin: 15px 0;
    text-align: center;
}

.whatsapp-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    text-decoration: none;
    color: white !important;
}

/* SVG icons con efecto met치lico */
.ui.icon.header svg {
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    color: #ffffff !important;
    width: clamp(24px, 5vw, 32px);
    height: clamp(24px, 5vw, 32px);
}

/* Grid principal con mejor responsive */
.ui.stackable.grid {
    position: relative;
    z-index: 1;
    padding: 0 10px;
    margin: 0 !important;
    width: 100% !important;
}

.ui.stackable.grid .row {
    padding: 0 !important;
}

/* Animaci칩n sutil para el fondo */
.page-content.home {
    animation: metalTexture 20s linear infinite,
               subtleGlow 4s ease-in-out infinite alternate;
}

@keyframes subtleGlow {
    0% { box-shadow: inset 0 0 50px rgba(255,255,255,0.05); }
    100% { box-shadow: inset 0 0 50px rgba(255,255,255,0.1); }
}

/* Centrar mejor el contenido principal */
.sixteen.wide.center.aligned.centered.column {
    background: rgba(255,255,255,0.05) !important;
    border-radius: 20px !important;
    backdrop-filter: blur(15px) !important;
    border: 1px solid rgba(255,255,255,0.1) !important;
    box-shadow: 0 15px 35px rgba(0,0,0,0.3) !important;
    margin: clamp(10px, 3vw, 20px) !important;
    padding: clamp(20px, 5vw, 40px) !important;
    width: calc(100% - clamp(20px, 6vw, 40px)) !important;
    box-sizing: border-box;
}

/* Responsive espec칤fico para m칩viles */
@media (max-width: 768px) {
    .logo {
        width: clamp(150px, 40vw, 220px);
        height: clamp(150px, 40vw, 220px);
        padding: 15px;
    }
    
    .ui.grid > .column {
        margin: 8px 0 !important;
        padding: 20px 15px !important;
        border-radius: 12px;
    }
    
    .ui.stackable.grid {
        padding: 0 5px;
    }
    
    .sixteen.wide.center.aligned.centered.column {
        margin: 10px 5px !important;
        padding: 25px 15px !important;
        width: calc(100% - 10px) !important;
    }
    
    .whatsapp-link {
        padding: 10px 20px;
        font-size: 1rem;
        display: block;
        width: fit-content;
        margin: 15px auto;
    }
}

@media (max-width: 480px) {
    .logo {
        width: 150px;
        height: 150px;
        padding: 10px;
    }
    
    .hero h1 {
        font-size: 2rem !important;
        margin: 15px 0 !important;
    }
    
    .hero h2 {
        font-size: 1.1rem !important;
        margin: 10px 0 !important;
    }
    
    .ui.icon.header {
        font-size: 1.3rem !important;
    }
    
    p.large {
        font-size: 1rem !important;
        padding: 0 5px;
    }
    
    .ui.grid > .column {
        padding: 15px 10px !important;
        margin: 5px 0 !important;
    }
    
    .sixteen.wide.center.aligned.centered.column {
        padding: 20px 10px !important;
        margin: 10px 2px !important;
    }
}

/* Mejoras adicionales para tablets */
@media (min-width: 769px) and (max-width: 1024px) {
    .logo {
        width: 200px;
        height: 200px;
    }
    
    .ui.grid > .column {
        padding: 25px !important;
        margin: 12px;
    }
}
</style>

