{{if .PageIsProfileStarList }}
<div class="star-list">
	<!-- Header -->
	<div class="top tw-mb-3">
		<div>
			<span>Lists({{len .StarList}})</span>
		</div>
		<div class="top-right">
			<!-- Sort -->
			<div class="ui small secondary filter tw-mr-3">
				<form id="star-list-form" class="ui form ignore-dirty">
					<div class="ui dropdown jump item" data-tooltip-content="{{ctx.Locale.Tr "user_profile_and_more"}}">
						<span class="text">
							Sort
							<span>{{svg "octicon-triangle-down"}}</span>
						</span>
						<div class="menu">
							<div class="divider"></div>
							<label class="{{if eq .SortType "newest"}}active {{end}}item">
								<input hidden type="radio" name="sort" {{if eq .SortType "newest"}}checked{{end}} value="newest"> {{ctx.Locale.Tr "repo.issues.filter_sort.latest"}}
							</label>
							<label class="{{if eq .SortType "oldest"}}active {{end}}item">
								<input hidden type="radio" name="sort" {{if eq .SortType "oldest"}}checked{{end}} value="oldest"> {{ctx.Locale.Tr "repo.issues.filter_sort.oldest"}}
							</label>
						</div>
					</div>
				</form>
			</div>
			<!-- Create List-->
			{{if eq .SignedUserID .ContextUser.ID}}
			<div>
				<button class="ui primary button muted show-modal" data-modal="#create-star-list" data-modal-modal-form.action="{{AppSubUrl}}/stars/lists">Create list</button>
			</div>
			{{end}}
		</div>
	</div>

	<!-- List -->
	<div id="profile-lists-container">
		{{if gt (len .StarList) 0}}
		<div class="list-box">
			{{range .StarList}}
			<a href="https://ilo.nz" class="box-row">
				<h3 class="name">{{.Name}}</h3>
				<div class="repositories">
					88 repositories
				</div>
			</a>
			{{end}}
		</div>
		{{else if eq .SignedUserID .ContextUser.ID}}
		<div class="ui attached segment tw-text-center tw-flex tw-items-center tw-justify-center tw-h-64 tw-rounded-md">
			<div class="content">
				<div class="">{{svg "octicon-star"}}</div>
				<div class="tw-mt-5 tw-text-20 tw-font-bold">Create your first list</div>
				<div class="tw-mt-5">
					Lists make it easier to organize and curate repositories that you have starred.
					<a class="ui show-modal" href="#" data-modal="#create-star-list" data-modal-modal-form.action="{{AppSubUrl}}/stars/lists">Create your first list</a>
				</div>
			</div>
		</div>
		{{end}}
	</div>
</div>
{{else}}
<div class="star-list-repos">
	<div class="top">
		<h2>Test</h2>
		{{if .SignedUserID .ContextUser.ID}}
		<a class="muted show-modal" href="#" data-modal="#edit-star-list" data-modal-modal-form.action="{{AppSubUrl}}/stars/lists">Edit list</a>
		{{end}}
	</div>
	<div class="description">Test</div>
	<div class="repositories">
		{{svg "octicon-repo"}} 12 {{ctx.Locale.Tr "user.repositories"}}
	</div>
</div>
{{end}}

{{template "shared/star_list_dialog" .}}
