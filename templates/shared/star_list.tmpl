{{if true }}
<div class="star-list">
	<!-- Header -->
	<div class="top">
		<div>
			<span>Lists(26)</span>
		</div>
		<div class="top-right">
			<!-- Sort -->
			<div class="ui small secondary filter tw-mr-3">
				<form id="star-list-form" class="ui form ignore-dirty">
					<div class="ui dropdown jump item" data-tooltip-content="{{ctx.Locale.Tr "user_profile_and_more"}}">
						<span class="text">
							Sort
							<span>{{svg "octicon-triangle-down"}}</span>
						</span>
						<div class="menu">
							<div class="divider"></div>
							<label class="{{if eq .SortType "newest"}}active {{end}}item">
								<input hidden type="radio" name="sort" {{if eq .SortType "newest"}}checked{{end}} value="newest"> {{ctx.Locale.Tr "repo.issues.filter_sort.latest"}}
							</label>
							<label class="{{if eq .SortType "oldest"}}active {{end}}item">
								<input hidden type="radio" name="sort" {{if eq .SortType "oldest"}}checked{{end}} value="oldest"> {{ctx.Locale.Tr "repo.issues.filter_sort.oldest"}}
							</label>
						</div>
					</div>
				</form>
			</div>
			<!-- Create List-->
			<div>
				<button class="ui primary button muted show-modal" href="#" data-modal="#create-star-list" data-modal-modal-form.action="{{AppSubUrl}}/stars/lists">Create list</button>
			</div>
		</div>
	</div>

	<!-- List -->
	<div id="profile-lists-container">
		<div class="list-box">
			<a href="https://ilo.nz" class="box-row">
				<h3 class="name">Vim</h3>
				<div class="repositories">
					88 repositories
				</div>
			</a>
			<a href="https://ilo.nz" class="box-row">
				<h3 class="name">Gitea</h3>
				<div class="repositories">
					123 repositories
				</div>
			</a>
			<a href="https://ilo.nz" class="box-row">
				<h3 class="name">Git</h3>
				<div class="repositories">
					12 repositories
				</div>
			</a>
			<a href="https://ilo.nz" class="box-row">
				<h3 class="name">NeoVim</h3>
				<div class="repositories">
					6 repositories
				</div>
			</a>
		</div>
	</div>
</div>
{{else if false }}
<div class="star-list-repos">
	<div class="top">
		<h2>Test</h2>
		<a class="muted show-modal" href="#" data-modal="#edit-star-list" data-modal-modal-form.action="{{AppSubUrl}}/stars/lists">Edit list</a>
	</div>
	<div class="description">Test</div>
	<div class="repositories">1 repositories</div>
</div>
{{end}}

{{template "shared/create_star_list_dialog" .}}
{{template "shared/edit_star_list_dialog" .}}
