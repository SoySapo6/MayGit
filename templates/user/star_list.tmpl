<div class="star-list">
	<!-- Header -->
	<div class="tw-flex tw-justify-between">
		<div>
			<span class="tw-text-lg">Lists(26)</span>
		</div>
		<div class="tw-flex tw-gap-x-2">
			<!-- Sort -->
			<div class="ui small secondary filter">
				<form id="star-list-form" class="ui form ignore-dirty">
					<div class="ui dropdown jump item" data-tooltip-content="{{ctx.Locale.Tr "user_profile_and_more"}}">
						<span class="text">
							Sort
							<span>{{svg "octicon-triangle-down"}}</span>
						</span>
						<div class="menu">
							<div class="divider"></div>
							<label class="{{if eq .SortType "newest"}}active {{end}}item">
								<input hidden type="radio" name="sort" {{if eq .SortType "newest"}}checked{{end}} value="newest"> {{ctx.Locale.Tr "repo.issues.filter_sort.latest"}}
							</label>
							<label class="{{if eq .SortType "oldest"}}active {{end}}item">
								<input hidden type="radio" name="sort" {{if eq .SortType "oldest"}}checked{{end}} value="oldest"> {{ctx.Locale.Tr "repo.issues.filter_sort.oldest"}}
							</label>
						</div>
					</div>
				</form>
			</div>
			<!-- Create List-->
			<div>
				<a class="ui small primary button">Create list</a>
			</div>
		</div>
	</div>

	<!-- List -->
	<div id="profile-lists-container" class="tw-mt-4">
		<div class="box">
			<a href="#">
				<div class="tw-flex tw-flex-row tw-justify-between basis-auto">
					<h3 class="">Vim</h3>
					<div class="tw-text-sm tw-text-gray">
						88 repositories
					</div>
				</div>
			</a>
		</div>
	</div>
</div>
